doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="/public/style.css")
    body 
        h1 Noom

        main
            div#welcome
                div#menu
                    form#welcomeForm
                        input(placeholder="room name", required, type="text")
                        button Create Room
                    p The room exists.

            div#call
                div#videos
                    video#myFace(autoplay, playsinline, width="400", height="250")
                    video#peerFace(autoplay, playsinline, width="400", height="250")

                div#myStream
                    div#chat
                        ul
                        div.hr
                        form#chatForm
                            input(placeholder="chat", required, type="text")
                            button Send

                    div#roomMenu
                        button#mute Mute
                        button#camera Turn Camera Off
                        select#cameras

        script(src="/socket.io/socket.io.js") 
        script(src="/public/app.js") 